{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/francisy9/maelstrom-off-chain/refs/heads/main/metadata/cardSchema.json",
    "title": "Card",
    "description": "Schema for general card metadata.",
    "type": "object",
    "properties": {
        "cardName": {
            "type": "string",
            "description": "The name of the card."
        },
        "cardType": {
            "type": "string",
            "enum": [
                "Unit",
                "Weapon",
                "Spell"
            ],
            "description": "The type of the card (Unit, Weapon, or Spell)."
        },
        "description": {
            "type": "string",
            "description": "The description of the card's ability or purpose."
        },
        "manaCost": {
            "type": "integer",
            "minimum": 0,
            "description": "The mana cost required to play the card."
        },
        "cardEffects": {
            "type": "array",
            "description": "Optional list of card effects associated with the card.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/francisy9/maelstrom-off-chain/refs/heads/main/metadata/cardEffectSchema.json"
            }
        },
        "unitStats": {
            "type": "object",
            "description": "Stats specific to unit cards.",
            "properties": {
                "attack": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Attack value of the unit."
                },
                "health": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Health value of the unit."
                }
            },
            "required": [
                "attack",
                "health"
            ]
        },
        "weaponStats": {
            "type": "object",
            "description": "Stats specific to weapon cards.",
            "properties": {
                "attack": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Attack value of the weapon."
                },
                "durability": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Durability of the weapon."
                }
            },
            "required": [
                "attack",
                "durability"
            ]
        },
        "spellStats": {
            "type": "object",
            "description": "Stats specific to spell cards.",
            "properties": {
                "spellDamage": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Damage dealt by the spell."
                }
            },
            "required": [
                "spellDamage"
            ]
        }
    },
    "required": [
        "cardName",
        "cardType",
        "description",
        "manaCost"
    ]
}